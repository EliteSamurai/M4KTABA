{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "baseUrl": ".", // Base directory for resolving non-relative paths
    "paths": {
      "@/*": ["./*"], // Map `@/` to the root directory
      "@test-utils": ["./tests/helpers/test-utils"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules", ".next", "dist", "tests/**/*"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.jsx",
    "next-env.d.ts",
    "types/**/*.ts",
    ".next/types/**/*.ts",
    "components/HoneyProductCart.jsx"
  ]
}
