{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "baseUrl": ".", // Base directory for resolving non-relative paths
    "paths": {
      "@/*": ["./*"] // Map `@/` to the root directory
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules", ".next", "dist"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "types/**/*.ts",
    ".next/types/**/*.ts",
    "components/HoneyProductCart.jsx"
  ]
}
